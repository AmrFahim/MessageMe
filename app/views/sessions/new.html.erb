<h1 class="ui center aligned header ">Welcome to MessageMe - a complete chat app </h1>
<h2 class="ui center aligned icon header">
  <i class="circular power icon  orange"></i>
  Log in to continue
</h2>

<div class="ui placeholder segment ">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input" >
            <%= f.text_field :username , placeholder: "Username"%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password ,"Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password , placeholder: "Password"%>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login" , class: "ui orange submit button"%>
      </div>
    <% end %>
    <div class="middle aligned column">
      <div class="ui big button orange">
        <%= link_to "Sign up" , new_user_path, class: "signup icon"%>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>